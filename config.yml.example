# Settings for the report
settings:
  # Minimum position value to include in report (in USD)
  min_position_value: 0
  
  # Currency for reporting
  currency: USD
  
  # Display precision for percentages
  percentage_precision: 2
  
  # Display precision for dollar amounts
  dollar_precision: 2
  
  # Number of top concentrations to display
  top_concentrations: 10


# ============================================================================
# EXPOSURE MAPPINGS - Simplified Syntax
# ============================================================================
# Define how positions map to underlying assets for concentration analysis
#
# SIMPLE FORMAT: Just one line per mapping!
#   SYMBOL: UNDERLYING              # 1:1 exposure (factor defaults to 1.0)
#   SYMBOL: UNDERLYING*factor       # Proportional exposure
#
# Examples:
#   MSTR: Bitcoin                   # MSTR has 1:1 exposure to Bitcoin
#   SPYG: NVDA*0.14                # SPYG holds 14% NVDA
#   MSTY: MSTR                      # MSTY maps to MSTR (which chains to Bitcoin)
#
# The analyzer automatically:
# - Resolves chained exposures (MSTY → MSTR → Bitcoin)
# - Multiplies factors along chains (TQQI → TQQQ*3.0 → QQQ = 3x exposure)
# - Aggregates all positions with same ultimate underlying
#
# ============================================================================

exposure_mappings:
  # Bitcoin Ecosystem - all map to Bitcoin
  MSTR: Bitcoin
  MSTY: MSTR                 # Chains through MSTR to Bitcoin
  BTCI: Bitcoin
  XBTY: Bitcoin
  YBIT: Bitcoin
  
